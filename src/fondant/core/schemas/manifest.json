{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "metadata": {
      "type": "object",
      "properties": {
        "dataset_name": {
          "type": "string"
        },
        "manifest_location": {
          "type": "string"
        },
        "run_id": {
          "type": "string"
        },
        "component_id": {
          "type": ["string", "null"]
        }
      },
      "required": [
        "dataset_name",
        "run_id"
      ]
    },
    "index": {
      "type": "object",
      "properties": {
        "location": {
          "type": "string"
        }
      },
      "required": [
        "location"
      ]
    },
    "fields": {
      "$ref": "#/definitions/fields"
    }
  },
  "required": [
    "metadata",
    "index",
    "fields"
  ],
  "definitions": {
    "field": {
      "type": "object",
      "properties": {
        "location": {
          "type": "string",
          "pattern": "/.*"
        }
      },
      "required": [
        "location",
        "type"
      ]
    },
    "fields": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/field"
      }
    }
  }
}